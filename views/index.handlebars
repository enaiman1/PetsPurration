{{!-- This is where we put all the pets --}}
<section id="petListing" class="w3-container  ">
    {{#each Pets}}
    {{#unless adopted}}

    <div class="pet w3-margin w3-animate-zoom" data-id={{id}}>
        <h3 class="petName ">Name: {{name}}</h3>
        {{!-- start row --}}
        <div class="w3-row ">
            <div class="w3-col s1 m5 l3">
                <img src={{photo}} id="image">
            </div>
            <div class="w3-col s1 m5 l3">
                <ul>
                    <li><strong>Breed: </strong>{{breed}}</li>
                    <li><strong>Age: </strong>{{age}}</li>
                    <li><strong>Size: </strong>{{size}}</li>
                    <li><strong>Gender: </strong>{{gender}}</li>
                    <li><strong>Location: </strong> {{location}}</li>
                    {{!-- <li>Adopted: {{adopted}}</li> --}}
                </ul>
            </div>
            <div class="w3-col  s1 m2 l3">
                <button class="change-adopted w3-btn w3-indigo w3-hover-light-blue w3-border w3-round w3-cell-bottom"
                    data-id="{{id}}" data-newadopted="{{adopted}}">
                    Adopt Me
                </button>
            </div>
        </div>
    </div>

    {{/unless}}
    {{/each}}

    {{#each Pets}}
    {{#if adopted}}

    <div class="pet w3-margin w3-animate-zoom" data-id={{id}}>
        <h3 class="petName ">Name: {{name}}</h3>
        {{!-- start row --}}
        <div class="w3-row ">
            <div class="w3-col s1 m5 l3">
                <img src={{photo}} id="image">
            </div>
            <div class="w3-col s1 m5 l3">
                <ul>
                    <li><strong>Breed: </strong>{{breed}}</li>
                    <li><strong>Age: </strong>{{age}}</li>
                    <li><strong>Size: </strong>{{size}}</li>
                    <li><strong>Gender: </strong>{{gender}}</li>
                    <li><strong>Location: </strong> {{location}}</li>
                    {{!-- <li>Adopted: {{adopted}}</li> --}}
                </ul>
            </div>
            <div class="w3-col  s1 m2 l3">
                <button class="change-adopted w3-btn w3-indigo w3-hover-light-blue w3-border w3-round w3-cell-bottom"
                    data-id="{{id}}" data-newadopted="{{adopted}}">
                    Adopt Me
                </button>
            </div>
        </div>
    </div>

    {{/if}}
    {{/each}}

